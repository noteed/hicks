#! /usr/bin/env bash

# Example provisioning script for `hicks.noteed.com`.
# The "Provisioning" and "Ready" state are recognized by `hicks`.

echo -n Provisioning > /STATE

apt-get update
apt-get install -q -y git

mkdir clones
pushd clones
git clone https://github.com/noteed/hicks.git
pushd hicks
head README.md
popd
popd

echo -n Ready > /STATE
echo Ready
